<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:paddingLeft="@dimen/activity_side_margin"
    android:paddingRight="@dimen/activity_side_margin"
    tools:context=".InformationActivity" >

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/info_bottom_margin"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_sync_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_info"
        android:layout_below="@+id/text_info"
        android:text="@string/txt_sync_status"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_sync_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_info"
        android:layout_below="@+id/txt_sync_status"
        android:text="@string/btn_sync_off" />

    <Button
        android:id="@+id/btn_select_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_info"
        android:layout_below="@+id/btn_sync_off"
        android:text="@string/btn_select_account" />

</RelativeLayout>